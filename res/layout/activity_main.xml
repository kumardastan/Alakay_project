<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	
    tools:context="kz.edu.sdu.project_alakay.MainActivity$PlaceholderFragment" >
    
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:src="@drawable/bcg" />
    
   	<ImageView 
   	    android:id="@+id/sun"
        android:layout_width="175dp"
        android:layout_height="175dp"
		android:layout_marginTop="40dp"
		android:layout_marginLeft="70dp"
		android:layout_marginBottom="12dp"
		android:src="@drawable/sun" />

   	<ImageButton
   	    android:id="@+id/edu"
   	    android:layout_width="130dp"
   	    android:layout_height="35dp"
   	    android:layout_centerHorizontal="true"
   	    android:layout_below="@+id/sun"
   	    android:layout_marginBottom="12dp"
  	    android:src="@drawable/edu" />
   	
   	<ImageButton 
   	    android:id="@+id/game"
   	    android:layout_width="130dp"
   	    android:layout_height="35dp"
   	    android:layout_alignLeft="@+id/edu"
   	    android:layout_below="@+id/edu"
   	    android:layout_marginBottom="12dp"
   	    android:src="@drawable/games" />
   	
   	
   	<ImageButton 
   	    android:id="@+id/fairy"
   	    android:layout_width="130dp"
   	    android:layout_height="35dp"
   	    android:layout_alignLeft="@+id/edu"
   	    android:layout_below="@+id/game"
   	    
   	    android:src="@drawable/fairy" />
   	
</RelativeLayout>
